{
  "name": "markdown-editor-pro",
  "productName": "Markdown Editor Pro",
  "version": "1.0.0",
  "description": "A beautiful, feature-rich markdown editor with AI integration and modern themes",
  "author": {
    "name": "Naveen Singaraju",
    "email": "singax.dev@gmail.com"
  },
  "homepage": "https://github.com/yourusername/markdown-editor-pro",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/markdown-editor-pro.git"
  },
  "license": "MIT",
  "main": "public/electron.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:clean": "rm -rf dist release && npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --mac --win --linux",
    "release": "npm run build && electron-builder --publish=always",
    "build:release": "node scripts/build-release.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "dompurify": "^3.0.5",
    "highlight.js": "^11.11.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.263.1",
    "marked": "^13.0.3",
    "marked-gfm-heading-id": "^4.1.1",
    "marked-highlight": "^2.2.1",
    "mermaid": "^10.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-table": "^7.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0",
    "vite": "^4.4.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.yourcompany.markdown-editor-pro",
    "productName": "Markdown Editor Pro",
    "copyright": "Copyright Â© 2024 Your Company",
    "directories": {
      "output": "release/artifacts",
      "buildResources": "build"
    },
    "files": [
      "public/electron.cjs",
      "public/preload.js",
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "publish": {
        "provider": "github"
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": {
        "provider": "github"
      }
    },
    "linux": {
      "category": "Office",
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "publish": {
        "provider": "github"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Markdown Editor Pro"
    },
    "dmg": {
      "title": "Markdown Editor Pro ${version}",
      "backgroundColor": "#1e1e1e",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [
    "markdown",
    "editor",
    "ai",
    "productivity",
    "writing",
    "documentation"
  ]
}
